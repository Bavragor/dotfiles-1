# Removes all the ugly files
alias rmb='echo -n "Really clean this directory? [y/n] ";
read yorn;
if test "$yorn" = "y"; then
  rm -f \#* *~ .*~;
  echo "Cleaned";
else
  echo "Not Cleaned";
fi'
