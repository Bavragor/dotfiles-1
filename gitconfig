[user]
  name = Nicol√°s Hock Isaza
  email = nhocki@gmail.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = blue bold
  new = green bold
[color "status"]
  added = yellow
  changed = red
  untracked = cyan
[push]
  # Push current branch even if you've never pushed it before
  default = current
[diff]
  # For Github-style word diffs
  wordRegex = [^[:space:]]
[alias]
  msg = commit --allow-empty -m
  st = status -sb
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  count = shortlog -sn
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
  last = log -n 1 --pretty=format:'%cr' --date=relative
  unstage = reset HEAD
[apply]
  whitespace = nowarn
[core]
  excludesfile =  /Users/norris/.gitignore
  editor = mate -w
[rebase]
  autosquash = true
[branch "master"]
	remote = origin
	merge = refs/heads/master
